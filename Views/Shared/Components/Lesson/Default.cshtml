@model OnlineCourses.Domain.Entities.Lesson
@{
	var MIndex = (int)ViewData["MIndex"];
	var LIndex = (int)ViewData["LIndex"];
	// Используйте индекс в вашем коде
}

<div class="element bg-white border-start border-end d-flex justify-content-between px-3 py-2 mx-5">

	<div>
		<form asp-area="" asp-controller="Create" asp-action="UpdateLessonName" method="post">
			<div class="editable-group d-flex align-items-center d-none">

				<input asp-for="Id" value="@Model.Id" type="hidden" />

				<input type="text" class="form-control" asp-for="Title"
				       id="Name-@Model.Id" />

				<div class="btn-group ms-2" role="group">
					<button type="submit" class="btn btn-outline-success save"
					        data-bs-title="Сохранить" data-bs-toggle="tooltip">
						<i class="fa-solid fa-check"></i>
					</button>

					<button type="button" class="btn btn-outline-danger cancel"
					        data-bs-title="Отмена" data-bs-toggle="tooltip">
						<i class="fa-solid fa-xmark"></i>
					</button>
				</div>
			</div>
		</form>
		<a asp-area="" asp-controller="Create" asp-action="ContentCreate" asp-route-id="@Model.Id" class="nav-link">
			<h5 class="my-2 title">@MIndex.ToString().@LIndex.ToString(). @Model.Title</h5>
		</a>
		
	</div>

	<div class="d-flex align-items-center">
		<button class="btn text-secondary edit" data-bs-title="Редактировать" data-bs-toggle="tooltip">
			<i class="fa-solid fa-pencil"></i>
		</button>

		<form asp-controller="Create" asp-action="DeleteLesson" method="post">
			<input asp-for="Id" value="@Model.Id" type="hidden" />
			<button type="submit" class="btn text-danger" data-bs-title="Удалить" data-bs-toggle="tooltip">
				<i class="fa-solid fa-trash-can"></i>
			</button>
		</form>
	</div>
</div>