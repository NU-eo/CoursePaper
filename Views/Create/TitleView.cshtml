@{
	ViewData["Title"] = "Главная страница курса";
}
@await Html.PartialAsync("HeaderPartial")
@await Component.InvokeAsync("SidebarCreate", new { id = Model.course.Id })

<!-- основной контент -->
<main class="main">
	<div class="container col-lg-9 col-12 bg-white p-0 mx-auto" style="max-width: 1087px;">
		
		<section class="d-flex align-items-end" style="background-image: url('/image/courseTitleImg/@Model.course.ImgTitlePath'); background-size: cover; background-position: center; height: 14rem;">
			<h2 class="m-3 bg-white p-3 rounded">@Model.course.Title</h2>
		</section>

		<section class="row p-4">
			<div class="col-7">
				<div style="word-wrap: break-word;">
					<h5>Коротко о курсе: </h5>
					<p>
						@Model.course.ShortDescription
					</p>
				</div>
				<div style="word-wrap: break-word;">
					<h5>Описание: </h5>
					<p>
						@Model.course.AboutCourse
					</p>
				</div>
				<div style="word-wrap: break-word;">
					<h5>Для кого этот курс: </h5>
					<p>
						@Model.course.ForWhom
					</p>
				</div>
			</div>

			<div class="col">
				<div class="mb-4">
					<h5>Число записавшихся: @Model.SubCount</h5>
				</div>

				<div>
					<a class="btn btn-primary mb-2" asp-area="" asp-controller="Create" asp-action="StructureCreate" asp-route-id="@Model.course.Id">Содержание курса</a>
					<a class="btn btn-secondary mb-2" asp-area="" asp-controller="Create" asp-action="TitleCreate" asp-route-id="@Model.course.Id">Редактировать</a>
				</div>
			</div>
		</section>

	</div>

</main>